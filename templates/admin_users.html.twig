{% block title %}User List{% endblock %}

{% block body %}
    <a href="{{ path('admin_dashboard')}}">
        Retour
    </a>
    <h1>User List</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.getRoleEnum().name }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No users found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'Mes Commandes'|trans }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    <style>
        body {
    font-family: 'Poppins', sans-serif;
    background-color: #f4f7f9;
    color: #333;
    margin: 0;
    padding: 0;
}

.orders-container {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

h2 {
    color: #444;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
    text-align: center;
}

/* Orders table styling */
.orders-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.orders-table th,
.orders-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    font-size: 0.95rem;
    color: #555;
}

.orders-table th {
    background-color: #f2f2f2;
    font-weight: 600;
}

.orders-table tr:nth-child(even) {
    background-color: #f9f9f9;
}

.orders-table tr:hover {
    background-color: #f1f3f5;
}

/* Command details styling */
.order-details {
    list-style: none;
    padding: 0;
    margin: 15px 0;
}

.order-details li {
    padding: 5px 0;
    font-size: 0.9rem;
    color: #333;
}

/* Total amount styling */
.total-amount {
    font-weight: 600;
    font-size: 1rem;
    color: #2a9df4;
    margin-top: 10px;
}

/* Responsive design for mobile */
@media (max-width: 768px) {
    .orders-container {
        padding: 15px;
    }

    .orders-table th,
    .orders-table td {
        padding: 10px;
    }

    .order-details li {
        font-size: 0.85rem;
    }
}

/* Styles pour les messages flash */
.alert {
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 5px;
    font-size: 16px;
    display: flex;
    align-items: center;
}

.alert-success {
    color: #155724;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
}

/* Icône de succès */
.alert-success::before {
    content: "✔"; /* Vous pouvez remplacer par une icône Font Awesome, par exemple */
    font-weight: bold;
    margin-right: 8px;
}

/* Effet de transition et disparition après quelques secondes */
.alert-success {
    animation: fadeOut 5s ease forwards;
}

/* Animation de disparition */
@keyframes fadeOut {
    0% {
        opacity: 1;
    }
    80% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

    </style>
</head>
{% block body %}
    {% include 'header/header.html.twig' %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="orders-container">
        <h2>Vos Commandes</h2>
        <table class="orders-table">
            <thead>
                <tr>
                    <th>Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in orders %}
                    <tr>
                        <td>
                            <p>le {{ commande.createdAt|date('d/m/Y H:i') }}</p>
                            
                            <ul class="order-details">
                                {% set montantCommande = 0 %}
                                {% if commande.orderItems|length != 0 %}
                                    {% for orderItem in commande.orderItems %}
                                        {% set montantCommande = montantCommande + orderItem.quantity * orderItem.productPrice %}
                                        <li>{{ orderItem.quantity }} × {{ orderItem.product.name }} à {{ orderItem.productPrice }} €</li>
                                    {% endfor %}
                                {% else %}
                                    <li>Pas de produit associé à cette commande</li>
                                {% endif %}
                            </ul>

                            <p class="total-amount">Montant total de la commande : {{ montantCommande }} €</p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


</html>
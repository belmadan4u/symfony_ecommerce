
{% block body %}
    <h1>Ajouter un Produit</h1>
    
    <div class="form-container">
        {{ form_start(addProductForm, {'attr': {'class': 'product-form'}}) }}

        <div class="form-group">
            {{ form_label(addProductForm.name, 'Nom du Produit') }}
            {{ form_widget(addProductForm.name, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.name) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.price, 'Prix (€)') }}
            {{ form_widget(addProductForm.price, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.price) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.description, 'Description') }}
            {{ form_widget(addProductForm.description, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.description) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.stock, 'Stock') }}
            {{ form_widget(addProductForm.stock, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.stock) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.status, 'Statut') }}
            {{ form_widget(addProductForm.status, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.status) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.category, 'Catégories') }}
            {{ form_widget(addProductForm.category, {'attr': {'class': 'input-field categories'}}) }}
            {{ form_errors(addProductForm.category) }}
        </div>

        <div class="form-group">
            {{ form_label(addProductForm.images, 'Images') }}
            {{ form_widget(addProductForm.images, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(addProductForm.images) }}
            <p class="help-text">Formats acceptés : JPEG, PNG, WEBP (max 2 Mo)</p>
        </div>


        <button type="submit" class="btn-submit">Ajouter le Produit</button>
        
        {{ form_end(addProductForm) }}
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f4f4;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    .form-container {
        max-width: 600px;
        margin: 2em auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 1.5em;
    }

    .input-field, .categories {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .input-file {
        border: none;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-submit:hover {
        background-color: #0056b3;
    }

    .help-text {
        font-size: 0.85em;
        color: #666;
    }
</style>
{% endblock %}

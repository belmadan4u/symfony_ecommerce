
{% block title %}Modifier Produit{% endblock %}

{% block body %}
    <h1>Modifier le Produit : {{ product.name }}</h1>

    {{ form_start(form) }}

    <div class="form-group">
        <label for="name">{{ 'Nom'|trans }}</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        <label for="price">{{ 'Prix'|trans }}</label>
        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.price) }}
    </div>

    <div class="form-group">
        <label for="description">{{ 'Description'|trans }}</label>
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        <label for="stock">{{ 'Stock'|trans }}</label>
        {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.stock) }}
    </div>

    <div class="form-group">
        <label for="status">{{ 'Statut'|trans }}</label>
        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.status) }}
    </div>

    <div class="form-group">
        <label for="category">{{ 'Cat√©gories'|trans }}</label>
        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <h2>{{ 'Images Actuelles'|trans }}</h2>
    <div class="current-images">
        {% for image in product.images %}
            <div class="image-container">
                <img src="{{ image.url }}" alt="Image de {{ product.name }}" style="max-width: 200px; max-height: 200px;"/>
            </div>
        {% else %}
            <p>{{ 'Aucune image disponible'|trans }}</p>
        {% endfor %}
    </div>

    <h2>{{ 'Ajouter de Nouvelles Images'|trans }}</h2>
    <div class="form-group">
    {{ form_widget(form.images) }}
    {{ form_errors(form.images) }}
    </div>

    
    {{ form_end(form) }}
{% endblock %}

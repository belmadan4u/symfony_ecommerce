<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'page_dacceuil'|trans}}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/index_admin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    {% block body %}
        {% if app.user != null and app.user.roles.0 == 'ROLE_ADMIN'%}
        {% include 'header/header.html.twig' %}
            
        <div class="navbar">
            <a href="{{ path('admin_prod_list')}}">
                Produit
            </a>
            <a href="{{ path('admin_show_user')}}">
                Users
            </a>
            <a href="{{ path('admin_show_orders')}}">
                Orders
            </a>
        </div>

        <div id="nbrProdCateg_montant_pie">
            
            <div class="scroll-table">
            <h2>Nombre de produits par catégorie</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Catégorie</th>
                            <th>Nombre de produits</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category, count in nbOfProductsByCategory %}
                            <tr>
                                <td>{{ category }}</td>
                                <td>{{ count }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">Aucune catégorie disponible</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            
            <div class='MontantVentes'>
                <h2>Montant total des ventes sur les derniers mois</h2>
                <p>{{ montantVentes12lastMonth }}</p>
            </div>

            <canvas id="ratio_produits"></canvas>
        </div>

        <h2 id="titre_table_comm">Dernières Commandes sur les 12 derniers mois</h2>
        <div class='derniereCom'>
            <table>
                <thead>
                    <tr>
                        <th>Dernières Commandes</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in dernieresCommandes %}
                        <tr>
                            <td>
                                id : {{ commande.id }}, le {{ commande.createdAt|date('d/m/Y H:i') }} de {{ commande.ofUser.id }} ( {{ commande.ofUser.firstName }} {{ commande.ofUser.lastName }} ) </br> 
                                
                                <ul>
                                {% set montantCommande = 0 %}
                                {% if commande.orderItems|length != 0 %}
                                    {% for orderItem in commande.orderItems %}    
                                        {% set montantCommande = montantCommande +  orderItem.quantity * orderItem.productPrice %}
                                        <li>{{ orderItem.quantity }} {{ orderItem.product.name }} à {{ orderItem.productPrice }} €</li>
                                    {% endfor %}
                                {% else %}
                                    <li>Pas de produit associé à cette commande</li>
                                {% endif %}
                                </ul>
                                
                                Montant total de la commande : {{montantCommande}} €
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% else %}
            <p>Vous n'êtes pas autorisé à accéder à cette page.</p>
        {% endif %}
    {% endblock %}
    <script>
    const ctx = document.getElementById('ratio_produits').getContext('2d');
    const myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['en stock', 'en precommande', 'en rupture'], 
            datasets: [{
                label: 'Ratio de disponibilité des produits',
                data: [{{ nbPdDispo }}, {{nbPdPrecommande}}, {{nbPdRupture}}], 
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Ratio des disponibilité des produits'
                }
            }
        }
    });
</script>
</body>
</html>
